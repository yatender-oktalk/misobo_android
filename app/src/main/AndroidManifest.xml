            android:theme="@style/Base.Theme.AppCompat" />
        <activity android:name="com.example.misohe.onBoarding.view.OnBoardingActivity" />

        <service
            android:name="com.example.misohe.utils.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.razorpay.ApiKey"
            android:value="rzp_live_2N116OfoXntg9j" />
    </application>

</manifest>