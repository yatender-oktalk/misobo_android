<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="270dp"
    app:cardCornerRadius="10dp"
    android:backgroundTint="#f7f7f7"
    android:layout_marginEnd="9dp"
    app:cardElevation="0dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/imageCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="9dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/expertImage"
                android:layout_width="61dp"
                android:layout_height="71dp"
                android:src="@color/colorAccent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/expertNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/manrope_extrabold"
            android:lineSpacingExtra="24sp"
            android:textColor="#4d426d"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16sp"
            app:layout_constraintStart_toEndOf="@id/imageCard"
            app:layout_constraintTop_toTopOf="@id/imageCard"
            tools:text="Swatantra" />

        <TextView
            android:id="@+id/expertCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:alpha=".7"
            android:fontFamily="@font/manrope_extrabold"
            android:lineSpacingExtra="24sp"
            android:textColor="#4d426d"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="@id/expertNameTextView"
            app:layout_constraintTop_toBottomOf="@id/expertNameTextView"
            tools:text="Vedic Astrologer" />

        <ImageView
            android:id="@+id/dotImageView"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:gravity="center"
            android:layout_marginStart="6dp"
            android:src="@drawable/circle_dot"
            app:layout_constraintBottom_toBottomOf="@id/expertCategory"
            app:layout_constraintStart_toEndOf="@id/expertCategory"
            app:layout_constraintTop_toTopOf="@id/expertCategory"
            app:tint="@color/colorAccent" />

        <TextView
            android:id="@+id/expertLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="4dp"
            android:alpha=".7"
            android:fontFamily="@font/manrope_medium"
            android:lineSpacingExtra="26sp"
            android:textColor="#4d426d"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@id/dotImageView"
            app:layout_constraintTop_toBottomOf="@id/expertNameTextView"
            tools:text="Hindi" />

        <ImageView
            android:id="@+id/karmaIcon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/ic_karma_coin"
            app:layout_constraintStart_toEndOf="@id/imageCard"
            android:layout_marginStart="7.5dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="@id/imageCard"
            />

        <TextView
            android:id="@+id/coinsNeeded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:fontFamily="@font/manrope_regular"
            android:gravity="center"
            android:lineSpacingExtra="12sp"
            android:textColor="#4d426d"
            android:textSize="12sp"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@id/karmaIcon"
            app:layout_constraintBottom_toBottomOf="@id/karmaIcon"
            app:layout_constraintStart_toEndOf="@id/karmaIcon"
            android:textStyle="bold"
            tools:text="501/Min" />

        <TextView
            android:id="@+id/needHelpText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_medium"
            android:textStyle="normal"
            android:textSize="12sp"
            android:textColor="#4d426d"
            android:lineSpacingExtra="26sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageCard"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Need help ? Contact us"
            />

        <View
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="#154d426d"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>