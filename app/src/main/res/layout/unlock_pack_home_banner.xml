<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="20dp"
    android:id="@+id/rootLayout"
    android:background="@drawable/unlock_mind_mini">

    <TextView
        android:id="@+id/packTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="26dp"
        android:fontFamily="@font/manrope_extrabold"
        android:lineSpacingExtra="8sp"
        android:textColor="#4d426d"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Mind pack" />

    <TextView
        android:id="@+id/detailsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/manrope_medium"
        android:lineSpacingExtra="4sp"
        android:textColor="#4d426d"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@id/packTitle"
        app:layout_constraintTop_toBottomOf="@id/packTitle"
        tools:text="Daily Wellness Reminders" />

    <ImageView
        android:id="@+id/packIcon"
        android:layout_width="61.3dp"
        android:layout_height="59.1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="19.8dp"
        android:layout_marginEnd="22.7dp"
        tools:src="@drawable/ic_mind_pack_icon"
        />

    <View
        android:id="@+id/arcSeparator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/detailsText"
        android:layout_marginTop="24.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#000000"
        android:alpha=".1"
        />

    <TextView
        android:id="@+id/unlockText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/manrope_extrabold"
        android:textStyle="normal"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/arcSeparator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12.5dp"
        android:textColor="#4d426d"
        android:lineSpacingExtra="12sp"
        android:drawableTint="@color/colorAccent"
        android:drawableEnd="@drawable/ic_round_arrow_forward_24"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="12.5dp"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:text="Unlock"
        />

</androidx.constraintlayout.widget.ConstraintLayout>