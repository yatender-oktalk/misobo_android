<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_rectangle_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/crossButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="11dp"
            android:src="@drawable/ic_round_close_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/tick"
            android:src="@drawable/ic_tick_green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="51dp"
            android:layout_width="92dp"
            android:layout_height="92dp"/>

        <ImageView
            android:id="@+id/karmaCoinsIcon"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_marginEnd="9dp"
            android:src="@drawable/ic_karma_coin"
            app:layout_constraintStart_toStartOf="@id/tick"
            app:layout_constraintBottom_toBottomOf="@id/karmaCoinsText"
            app:layout_constraintEnd_toStartOf="@id/karmaCoinsText"
            app:layout_constraintTop_toTopOf="@id/karmaCoinsText" />

        <TextView
            android:id="@+id/karmaCoinsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:fontFamily="@font/manrope_regular"
            android:gravity="center"
            android:text="100"
            android:paddingStart="12dp"
            android:textColor="#4d426d"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/tick"
            app:layout_constraintTop_toBottomOf="@id/tick" />

        <TextView
            android:id="@+id/coinsAddedSuccessfull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_extrabold"
            android:textStyle="normal"
            android:textSize="20sp"
            android:textColor="#4d426d"
            android:lineSpacingExtra="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/karmaCoinsText"
            android:layout_marginTop="30dp"
            android:text="Coins Added Successful"
            />

        <TextView
            android:id="@+id/confirmingBooking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_regular"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#4d426d"
            android:lineSpacingExtra="6sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/coinsAddedSuccessfull"
            android:layout_marginTop="50dp"
            android:paddingBottom="80dp"
            android:text="Confirming your bookingâ€¦"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
