<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="bottomNavigationStyle"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/manrope_light</item>
        <item name="android:letterSpacing" type="dimen" format="float">0.48</item>
        <item name="lineHeight" >24sp</item>
        <item name="iconPadding">0dp</item>
    </style>

    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="CustomExoMediaButton.Play" parent="ExoMediaButton.Play">
        <item name="android:src">@drawable/ic_play_button</item>
        <item name="android:contentDescription">@string/exo_controls_play_description</item>
    </style>

    <style name="CustomExoMediaButton.Pause" parent="ExoMediaButton.Pause">
        <item name="android:src">@drawable/ic_baseline_pause_circle_filled_24</item>
        <item name="android:contentDescription">@string/exo_controls_pause_description</item>
    </style>

</resources>